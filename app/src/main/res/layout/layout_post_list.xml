<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/twentyDp"
    android:layout_marginRight="@dimen/twentyDp"
    android:layout_marginBottom="@dimen/tenDp"
    app:cardCornerRadius="@dimen/eightDp"
    app:cardElevation="@dimen/eightDp"
    app:cardMaxElevation="@dimen/tenDp"
    app:contentPadding="@dimen/tenDp"
   >
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <!-- HORIZONTAL GUIDELINE-->


    <!-- VERTICAL GUIDELINE-->


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineColumnOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.21" />

    <!-- ROW ONE-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubTitle"
        android:layout_width="@dimen/zeroDp"
        android:layout_height="wrap_content"
        android:text="CHURCH OF ATLANTA"
        android:fontFamily="@font/gotham_rounded_medium"
        android:textSize="@dimen/twelveSp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <!--  IMAGE VIEW-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tenDp"
        android:text="Should We All Pray Everyday"
        android:fontFamily="@font/gotham_rounded_bold"
        android:textSize="@dimen/fifteenSp"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvSubTitle"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivChurch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_church"
        android:layout_marginStart="@dimen/tenDp"
        android:layout_marginTop="@dimen/tenDp"

        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivProfileOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_profile1"
        android:layout_marginTop="@dimen/twentyFiveDp"
        android:layout_marginStart="@dimen/sixteenDp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivProfileTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_profile2"
        app:layout_constraintEnd_toStartOf="@+id/ivProfileOne"
        app:layout_constraintStart_toStartOf="@+id/ivProfileOne"
        app:layout_constraintBottom_toTopOf="@+id/ivProfileOne"
        app:layout_constraintTop_toTopOf="@+id/ivProfileOne"
        />
<!--    CHAT-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leiti Hsu"
        android:textAppearance="@style/styleChatText"
        android:layout_marginTop="@dimen/fiveDp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="@+id/guidelineColumnOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvSecondName"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFirstChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_speech_balloon15x15"
        android:layout_marginStart="@dimen/sixteenDp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvFirstName"
        app:layout_constraintStart_toEndOf="@+id/tvFirstName"
        app:layout_constraintBottom_toBottomOf="@+id/tvFirstName" />
<!--    ROW TWO-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSecondName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Noelle Chesnut Whitmore"
        android:textAppearance="@style/styleChatText"
        android:layout_marginTop="@dimen/fiveDp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/tvFirstName"
        app:layout_constraintStart_toStartOf="@+id/tvFirstName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvThirdName"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSecondChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_speech_balloon15x15"
        android:layout_marginStart="@dimen/sixteenDp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSecondName"
        app:layout_constraintStart_toEndOf="@+id/tvSecondName"
        app:layout_constraintBottom_toBottomOf="@+id/tvSecondName" />
    <!--    ROW TWO-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvThirdName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drue Kataoka"
        android:layout_marginTop="@dimen/fiveDp"
        android:textAppearance="@style/styleChatText"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/tvSecondName"
        app:layout_constraintStart_toStartOf="@+id/tvSecondName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvFourName"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivThirdChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_speech_balloon15x15"
        android:textAppearance="@style/styleChatText"
        android:layout_marginStart="@dimen/sixteenDp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvThirdName"
        app:layout_constraintStart_toEndOf="@+id/tvThirdName"
        app:layout_constraintBottom_toBottomOf="@+id/tvThirdName" />

    <!--    ROW TWO-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFourName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bomani X"
        android:layout_marginTop="@dimen/fiveDp"
        android:textAppearance="@style/styleChatText"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/tvThirdName"
        app:layout_constraintStart_toStartOf="@+id/tvSecondName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ivGroup"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFourChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_speech_balloon15x15"
        android:layout_marginStart="@dimen/sixteenDp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvFourName"
        app:layout_constraintStart_toEndOf="@+id/tvFourName"
        app:layout_constraintBottom_toBottomOf="@+id/tvFourName" />

<!--    BASE LINE-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_group"
        android:layout_marginStart="@dimen/tenDp"
        android:layout_marginTop="@dimen/tenDp"

        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/guidelineColumnOne"
        app:layout_constraintTop_toBottomOf="@id/tvFourName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvConnectionCount"
        android:text="546"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fiveDp"
        app:layout_constraintTop_toTopOf="@+id/ivGroup"
        app:layout_constraintStart_toEndOf="@+id/ivGroup"
        app:layout_constraintBottom_toBottomOf="@+id/ivGroup"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSpeaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_speaker"
        android:layout_marginStart="@dimen/tenDp"

        app:layout_goneMarginStart="@dimen/tenDp"
        app:layout_constraintStart_toEndOf="@+id/tvConnectionCount"
        app:layout_constraintTop_toTopOf="@+id/ivGroup"
        app:layout_constraintBottom_toBottomOf="@+id/ivGroup"

        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSpeechCount"
        android:text="546"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fiveDp"
        app:layout_constraintTop_toTopOf="@+id/ivSpeaker"
        app:layout_constraintStart_toEndOf="@+id/ivSpeaker"
        app:layout_constraintBottom_toBottomOf="@+id/ivSpeaker"/>



</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>